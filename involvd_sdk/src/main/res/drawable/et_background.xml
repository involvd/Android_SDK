<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_activated="false" >
        <layer-list>
            <item android:left="-2dp" android:top="-2dp" android:right="-2dp" >
                <shape android:shape="rectangle" >
                    <padding android:top="5dp" android:right="5dp" android:left="5dp" android:bottom="5dp" />
                    <solid android:color="@android:color/transparent" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_focused="true" >
        <layer-list>
            <item android:left="-2dp" android:top="-2dp" android:right="-2dp" >
                <shape android:shape="rectangle" >
                    <padding android:top="5dp" android:right="5dp" android:left="5dp" android:bottom="5dp" />
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="?attr/colorAccent" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item android:left="-2dp" android:top="-2dp" android:right="-2dp" >
                <shape android:shape="rectangle" >
                    <padding android:top="5dp" android:right="5dp" android:left="5dp" android:bottom="5dp" />
                    <solid android:color="@android:color/transparent" />
                    <stroke android:width="1dp" android:color="#33000000" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>